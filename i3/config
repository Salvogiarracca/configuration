set $workspace3 "3 - Dev"
set $workspace4 "4 - File"
set $workspace5 "5 - PDF"
set $workspace6 "6 - Torrent"
set $workspace9 "9 - Telegram"
set $workspace0 "10 - Music/Video"
set $workspaceM "M - TaskManager"

# switch to workspace
